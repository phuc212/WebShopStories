@model IEnumerable<DemoFIN3.Core.Models.Comment>

@foreach (var item in Model.OrderByDescending(p => p.CommentTime))
{
    <div class="container wrap-comment card mb-1">
        <div class="d-flex justify-content-center row">
            <div class="col-md-8">
                <div class="d-flex flex-column comment-section">
                    <div class="bg-white p-2">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row user-info">
                                <img class="rounded-circle" src="https://i.imgur.com/hczKIze.jpg" width="40">
                                <div class="d-flex flex-column justify-content-start ml-2">
                                    <span class="d-block font-weight-bold name">@Html.DisplayFor(modelItem => item.Account.Name)</span>
                                    <span class="date text-black-50">@Html.DisplayFor(modelItem => item.CommentTime)</span>
                                </div>
                            </div>
                            <div class="d-flex flex-row user-info">
                                @for (int i = 0; i < item.Rating; i++)
                                {
                                    <span class="fas fa-star text-warning"></span>
                                }
                                @for (int i = item.Rating; i < 5; i++)
                                {
                                    <span class="far fa-star"></span>
                                }
                            </div>
                        </div>
                        <div class="mt-2">
                            <p class="comment-text">@Html.DisplayFor(modelItem => item.CommentHeader)</p>
                            <p class="comment-text">@Html.DisplayFor(modelItem => item.CommentText)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


