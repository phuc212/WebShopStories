@model DemoFIN3.Core.Models.Account

@{
    ViewBag.Title = "UserInfo";
}

<div class="container body-content" style="min-height: 100vh; padding-top: 80px">
    <div style="min-height: 80vh;">
        @*<div class="row">
            <p class="card-header col h4">
                <i class="fas fa-user-circle"></i> Account <i class="fas fa-chevron-right"></i>
                @Html.DisplayFor(modelItem => modelItem.Name)
            </p>
        </div>
        <hr />
        <hr />*@
        <div class="row text-center d-flex justify-content-center" style=" background-image: url('http://globalcastingresources.com/wp-content/uploads/2019/03/image1-5.png')">
            <img src="https://toppng.com/uploads/preview/vu-thi-ha-user-pro-icon-115534024853ae3gswzwd.png" class="img-circle col-3" />
        </div>
        <div class="row mb-5 text-center d-flex justify-content-center" style="background-image: url('http://globalcastingresources.com/wp-content/uploads/2019/03/image1-5.png')">
            <div class="col-sm-9">
                <div class="h4 card-title text-uppercase mt-1">
                    @Html.DisplayFor(modelItem => modelItem.Name)
                    @Html.ActionLink(" ", "Edit", new { id = Model.Id }, new { @class = "fas fa-user-edit" })
                </div>
                <div class="card-text card-header bg-light" style="text-align: justify; border-radius: 28px; min-height: 350px">
                    <span class="text-success">Phone number</span>: @Html.DisplayFor(modelItem => modelItem.Phone) <br />
                    <span class="text-success">Email</span>: @Html.DisplayFor(modelItem => modelItem.Email)<br />
                    <span class="text-success">Address</span>: @Html.DisplayFor(modelItem => modelItem.Address) <br />
                    <span class="text-success">Gender</span>: @Html.DisplayFor(modelItem => modelItem.Gender) <br />
                    @Html.DisplayFor(modelItem => modelItem.ShortDescription)
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3 card-header bg-light" style="border-right: 10px double #27af32; border-radius: 28px;">
                @Html.Partial("~/Views/Shared/_Category.cshtml")
            </div>
            <div class="col-sm-9">
                <div class="card-header bg-light mb-2">
                    <h4 class="d-flex justify-content-center">
                        Followed stories
                    </h4>
                </div>
                @if (Model.Stories.Count <= 0)
                {
                    <div class="row card-body d-flex justify-content-center">
                        <span class="h4">List favorite stories are updating!</span>
                    </div>
                }
                else
                {
                    <div class="row">
                        @foreach (var item in Model.Stories)
                        {
                            <div class="col-sm-4 mb-3">
                                <div class="mr-3 ml-3">
                                    <div class="row story-img">
                                        <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="img-thumbnail" style="width: 100%; height: 18rem" alt="...">
                                        @if (item.StoryStatus == DemoFIN3.Core.Enum.StoryStatus.Full)
                                        {
                                            <span class="story-status">@Html.DisplayFor(modelItem => item.StoryStatus)</span>
                                        }
                                    </div>
                                    <div class="row card-title h5 mt-2" style="
                                        -webkit-line-clamp: 2;
                                        white-space: normal;
                                        text-overflow: ellipsis;
                                        overflow: hidden;
                                        display: -webkit-box;
                                        -webkit-box-orient: vertical;
                                        text-align: center;">
                                        @Html.ActionLink(item.Title, "Details", "Stories", new { year = item.PostedOn.Year, month = item.PostedOn.Month.ToString("00"), title = item.UrlSlug, id = item.Id }, new { @class = "nav-link text-dark" })
                                    </div>
                                    <div class="text-success" style="text-align: center; -webkit-box-orient: vertical;">
                                        @Html.DisplayFor(modelItem => item.Author.Name)
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .story-status {
        position: absolute;
        top: 5px;
        right: 5px;
        height: 28px;
        padding: 0px 3px 0 2px;
        text-align: center;
        color: #fff;
        border-radius: 0 0px 0px 5px;
        background: #28a745;
    }

    .story-img {
        position: relative;
    }
</style>
