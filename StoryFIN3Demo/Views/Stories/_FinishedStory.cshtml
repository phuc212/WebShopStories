    @*<div class="col-10 row-cus">*@
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="row-cus">
                    <div class="col-5 story-img">
                        <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="img-thumbnail" style="width: 100%; height: 8rem" alt="...">
                        @if (item.StoryStatus == DemoFIN3.Core.Enum.StoryStatus.Full)
                        {
                            <span class="story-status-full">@Html.DisplayFor(modelItem => item.StoryStatus)</span>
                        }
                    </div>
                    <div class="col-7">
                        <div class="row h5">
                            @Html.ActionLink(item.Title, "Details", new { year = @Model.First().PostedOn.Year, month = @Model.First().PostedOn.Month.ToString("00"), title = @Model.First().UrlSlug, id = @Model.First().Id }, new { @class = "text-dark story-title" })
                        </div>
                        <div class="row text-success">
                            @Html.DisplayFor(modelItem => item.Author.Name)
                        </div>
                        <div class="row short-des">
                            @Html.Raw(item.ShortDescription)
                        </div>
                    </div>
                </div>
            </div>
