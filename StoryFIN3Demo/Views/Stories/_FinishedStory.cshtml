<style>
    .story-status-full {
        position: absolute;
        top: 5px;
        right: 20px;
        height: 20px;
        padding: 0px 2px 0px 2px;
        text-align: center;
        color: #fff;
        border-radius: 0 0px 0px 5px;
        background: #28a745;
        font-size: 12px;
    }

    .story-img {
        position: relative;
    }

    .short-des {
        -webkit-line-clamp: 2;
        white-space: normal;
        text-overflow: ellipsis;
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        line-height: 1.6rem;
        text-align: justify;
    }

    .story-title {
        -webkit-line-clamp: 2;
        white-space: normal;
        text-overflow: ellipsis;
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        line-height: 1.6rem;
        text-decoration: none;
    }

    .story-title:hover {
        text-decoration: none;
    }

    .row-cus {
        display: flex;
        flex-wrap: wrap;
    }
</style>
