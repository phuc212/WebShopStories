@model DemoFIN3.Core.Models.Chapter

@{
    ViewBag.Title = "Details";
}

<div class="card-header d-flex justify-content-between align-items-center mb-1">
    <div class="text-uppercase">
        @Model.Story.Title <i class="fas fa-chevron-right"></i>
                           <i class="fas fa-memory"></i>
        Chapter: @Model.ChapterNumber
    </div>
    <div class="breadcrumb">

    </div>
</div>

<div class="container body-content" style="min-height: 100vh;">
    <div style="min-height: 80vh;">
        <hr />
        <div class="row mb-5 h2 text-center d-flex justify-content-center">
            @Html.DisplayFor(model => model.ChapterHeader)
        </div>
        <div class="row" style="line-height: 2; font-size: 22px; text-align: justify">
            @Html.Raw(Model.ChapterContent)
        </div>
    </div>
</div>
<hr />
<div class="form-inline col-md-10 d-flex justify-content-sm-end">
    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
    <div class="ml-2">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-success" })
    </div>
</div>