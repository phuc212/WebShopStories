@model DemoFIN3.Core.Models.Story

@{
    ViewBag.Title = "Details";
}

<div class="card-header d-flex justify-content-between align-items-center mb-1">
    <div class="text-uppercase">
        @Html.DisplayFor(model => model.Title) <i class="fas fa-chevron-right"></i>
                                               <i class="fas fa-info-circle"></i>
        Details
    </div>
    <div class="breadcrumb">
        @Html.ActionLink("Create New Chapter", "CreateForStory", "ChaptersAdmin", new { storyId = Model.Id }, new { @class = "btn btn-primary" })
    </div>
</div>

<div class="row mb-5 card-body">
    <div class="col-sm-9">
        <div class="row">
            <div class="col-sm-4">
                <img src="../@Html.DisplayFor(model => model.ImageUrl)" class="img-thumbnail" width="280" height="560" />
            </div>
            <div class="col-sm-8">
                <div class="h4 card-title text-uppercase">
                    @Html.DisplayFor(model => model.Title)
                </div>
                <div class="card-text">
                    @Html.DisplayFor(model => model.Rate) <i class="fas fa-star text-warning"></i> | @Html.DisplayFor(model => model.ViewCount) <i class="fas fa-eye"></i>
                </div>
                <div class="card-text card-header mt-4">
                    <div class="row">
                        <div class="col">
                            Author: @Html.DisplayFor(model => model.Author.Name)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            Category: @Html.DisplayFor(model => model.Category.Name)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            Status: @Html.DisplayFor(model => model.StoryStatus)
                        </div>
                    </div>
                    @Html.Raw(Model.ShortDescription)
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 card-header">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.PublishDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PublishDate)
            </dd>
            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.PostedOn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PostedOn)
            </dd>
        </dl>
    </div>
</div>

<div class="form-inline d-flex justify-content-sm-end card-footer">
    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
    <div class="ml-2">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-success" })
    </div>
</div>
